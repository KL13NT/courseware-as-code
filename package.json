{
  "name": "courseware-as-code",
  "private": false,
  "description": "A template for getting started with Courseware as Code",
  "version": "0.0.1",
  "author": "Nabil Tharwat",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "next dev",
    "prebuild": "run-s lint test",
    "build:pdf": "node ./scripts/generatePDF.js",
    "build:export": "next build && next export",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write src/**/*.{js,jsx}",
    "lint": "eslint --ext .jsx --ext .js ./ --config ./.eslintrc.js",
    "test": "jest --colors --expand --logHeapUsage --config jest.config.js --verbose --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KL13NT/courseware-as-code.git"
  },
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/KL13NT/courseware-as-code/issues"
  },
  "homepage": "https://github.com/KL13NT/courseware-as-code#readme",
  "keywords": [
    "courseware",
    "nextjs",
    "mdx",
    "markdown"
  ],
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.1.3",
    "gray-matter": "^4.0.2",
    "next": "^10.1.3",
    "puppeteer": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.0",
    "remark-math": "^4.0.0",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.1.1",
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "eslint": "^7.24.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
